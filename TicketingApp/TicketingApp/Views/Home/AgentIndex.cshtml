@{
    ViewData["Title"] = "Home Page";
}

<div class="d-flex justify-content-between mt-5">
    <div class="card col-5">
        <div class="card-header">
            Task assign to me
        </div>
        <div class="card-body">
            <h5 class="card-title">Need help?</h5>
            <p class="card-text">Pick from the servies catalog and submit your request to our support team.</p>
            <a class="btn btn-primary" asp-area="" asp-controller="Ticket" asp-action="Create"><i class="bi bi-calendar2-plus-fill fs-4"></i> View Task Just Assigned</a>
        </div>
    </div>
    <div class="card col-5">
        <div class="card-header">
            Task just resolved
        </div>
        <div class="card-body">
            <h5 class="card-title">Follow up with you ongoing requests</h5>
            <p class="card-text">Check the progress, add comments, acknowledge the solution</p>
            <a class="btn btn-info" asp-area="" asp-controller="Ticket" asp-action="OnGoingRequests"><i class="bi bi-wechat fs-4"></i> View Task To be Close</a>
        </div>
    </div>
</div>
<div class="d-flex justify-content-between mt-5">   
    <div class="card col-5">
        <div class="card-header">
            Task Closed 
        </div>
        <div class="card-body">
            <h5 class="card-title">Follow up with you closed requests</h5>
            <p class="card-text">Check the progress, add comments, acknowledge the solution</p>
            <a class="btn btn-secondary" asp-area="" asp-controller="Ticket" asp-action="OnGoingRequests"><i class="bi bi-door-closed-fill"></i> View Closed Request</a>
        </div>
    </div>
</div>
