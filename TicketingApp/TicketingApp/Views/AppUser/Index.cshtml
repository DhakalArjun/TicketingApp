<table class="table table-bordered">
    <thead>
        <tr>
            <th>ID</th>
            <th>User Name</th>
            <th>Name</th>
            <th>Role</th>
            <th>Action</th>  
        </tr>
    </thead>
    <tbody>
        @foreach (var usr in ViewBag.AppUserRoles)
        {
            <tr>
                <td>@usr.Id</td>
                <td>@usr.UserName</td>
                <td>@usr.FirstName @usr.LastName</td> 
                <td>@usr.Name</td>
                @if (!usr.Name.Equals("Admin")){
                    <td>
                        <a asp-controller="AppUser" asp-action="UpdateUserRole" asp-route-userId="@usr.Id" class="btn btn-outline-primary btn-sm mx-2"><i class="bi bi-pencil-square"></i> Edit</a>
                        <a asp-controller="AppUser" asp-action="DeleteUser" asp-route-id="@usr.Id" class="btn btn-outline-danger btn-sm"><i class="bi bi-trash"></i> Delete</a>
                    </td>
                }
                else
                {
                    <td>
                        <a asp-controller="AppUser" asp-action="UpdateUserRole" asp-route-userId="@usr.Id" class="btn btn-outline-secondary btn-sm mx-2 disabled"><i class="bi bi-pencil-square"></i> Edit</a>
                        <a asp-controller="AppUser" asp-action="DeleteUser" asp-route-id="@usr.Id" class="btn btn-outline-secondary btn-sm disabled"><i class="bi bi-trash"></i> Delete</a>
                    </td>                    
                }                 
            </tr>
        }
    </tbody>
</table>


